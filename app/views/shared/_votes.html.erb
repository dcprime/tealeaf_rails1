  <div class='span0 well text-center'>
    <% if logged_in? %>
      <%= link_to vote_post_path(obj, vote: true), method: 'post' do %>
        <i class='icon-arrow-up'></i>
      <% end %>
    <% end %>
    <br/>
    <%= obj.total_votes %>
      <% if obj.total_votes == 1 || obj.total_votes == -1 %>
       vote
      <% else %>
       votes
      <% end %>
    <br/>
    <% if logged_in? %>
      <%= link_to vote_post_path(obj, vote: false), method: 'post' do %>
        <i class='icon-arrow-down'></i>
      <% end %>
    <% end %>
    <br/>
  </div>