<div class="row">
  <div class='span0 well text-center'>
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: true), method: 'post' do %>
        <i class='icon-arrow-up'></i>
      <% end %>
    <% end %>
    <br/>
    <%= post.total_votes %>
      <% if post.total_votes == 1 || post.total_votes == -1 %>
       vote
      <% else %>
       votes
      <% end %>
    <br/>
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: false), method: 'post' do %>
        <i class='icon-arrow-down'></i>
      <% end %>
    <% end %>
    <br/>
  </div>
  <div class='span8 well'>
    <%= render post.categories %>
    <h4><%= link_to(post.title, post_path(post)) %></h4>
    <p><%= post.description %></p>
    <p>
      <span class='quiet'>posted by</span> <%= link_to(post.creator.username, user_path(post.creator)) %>
      <small>on <%= display_datetime(post.created_at) %></small>
    </p>
    <small>
      <span>
        <%= link_to("#{post.comments.size} comments", post_path(post)) %>
      </span>
    </small>
  </div>
</div>