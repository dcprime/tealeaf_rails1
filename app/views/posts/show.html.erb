<p class='pull-right'>
  [<%= link_to 'Edit post', edit_post_path(@post) %>]
</p>

<p>
  <%= render @post.categories %>
</p>

<%= render 'shared/content_title', title: link_to(@post.title, "http://#{@post.url}") %>

<p>
  <%= @post.description %>
</p>
<hr/>

<% if @post.comments.any? %>
  <h4>Comments:</h4>
  <% @post.comments.each do |comment| %>
  <div class="row">
    <div class='span8 well'>
      <em>"<%= comment.body %>"</em>
      <br/>
      <span class='quiet'>posted by</span> <%= comment.creator.username %>
      <small>at <%= comment.created_at %></small>
    </div>
  </div>
  <% end %>
  <% else %>
  <h4>No Comments</h4>
<% end %>

<br/>

<%= form_for [@post, @comment] do |f| %>
  <%= render 'shared/errors', obj: @comment %>
  <div class='control-group'>
    <%= f.label :body, 'Add a comment' %>
    <%= f.text_area :body, rows: 3, class: 'span4' %>
    <br/>
    <%= f.submit 'Add Comment', class: 'btn brn-primary' %>
  </div>
<% end %>
