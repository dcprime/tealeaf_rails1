<% show_post ||= false %>
<div class='row'>
  <div class='span0 well text-center'>
    <% if logged_in? %>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post' do %>
        <i class='icon-arrow-up'></i>
      <% end %>
    <% end %>
    <br/>
    <%= comment.total_votes %>
      <% if comment.total_votes == 1 || comment.total_votes == -1 %>
       vote
      <% else %>
       votes
      <% end %>
    <br/>
    <% if logged_in? %>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post' do %>
        <i class='icon-arrow-down'></i>
      <% end %>
    <% end %>
  </div>

  <div class="well span8">
    <em>"<%= comment.body %>"</em>
    <% if show_post %>
      on <%= link_to(comment.post.title, post_path(comment.post)) %>        
    <% end %>
    <br/>
    <span class='quiet'>posted by</span> <%= link_to(comment.creator.username, user_path(comment.creator)) %>
    <small>on <%= display_datetime(comment.created_at) %></small>
  </div>
</div>